<p id="notice"><%= notice %></p>

<h1>Listing Check Ins</h1>
<div class="container">
<div class ="row">
  <% @check_ins.each do |check_in| %>
  <div class= "col-md-6">
    <div class="panel panel-default">
    <div class="panel-heading">
    <%= link_to 'Show', check_in %>
  </div>
  </div>
  </div>
  <% end %>
  </div>
  </div>
<table>
  <thead>
    <tr>
      <th>Member name</th>
      <th>Guest name</th>
      <th>Bar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @check_ins.each do |check_in| %>
      <tr>
        <td><%= check_in.member_name %></td>
        <td><%= check_in.guest_name %></td>
        <td><%= check_in.bar %></td>
        <td><%= link_to 'Show', check_in %></td>
        <td><%= link_to 'Edit', edit_check_in_path(check_in) %></td>
        <td><%= link_to 'Destroy', check_in, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

